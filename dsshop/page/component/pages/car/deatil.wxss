    border-right-width: 1px;
    border-right-style: solid;
    border-right-color: #e6e6e6;
    text-align: center;
    padding-top:8px;
    position: relative;
}
.immediately .nobottom{
    margin:0 0;
    background: #fff;
    padding-left:0px;
    padding-right:0px;
    line-height:17px;
    color: #515151;
    border-radius:0px;

}
.immediately .nobottom::after{
    border:none;
}
.immediately .instructions{
    position: relative;
    top:-5px;
}
.immediately .bottom-two{
    -webkit-flex: 2;
    line-height: 45px;
    color: #fff;
}
.immediately .bottom-two.shop{
    background: #FF8E1B;
}
.immediately .bottom-two.buy{
    background: #d81e06;
}
.immediately .bottom-one .angle-the {
    top:-7px;
    right:14px;
    height:1.6em;
    min-width:1.6em;
    line-height:1.6;
    padding:0 .4em;
    font-size:20px;
    border-radius:.8em;
    background:#f44;
    color:#fff;
    text-align:center;
    white-space:nowrap;
    transform:translateX(50%) scale(.5);
    transform-origin:center;
    z-index:10;
    box-shadow:0 0 0 2px #fff;
    box-sizing:border-box;
    position:absolute;
}
