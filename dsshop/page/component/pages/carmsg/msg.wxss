
.immediately{
    text-align: center;
    width:100%;
    height:45px;
    position: fixed;
    left: 0px;
    bottom: 0px;
    display:-webkit-flex;
    background: #fff;
    color: #515151;
    border-top-width: 1px;
    border-top-style: solid;
    border-top-color: #e6e6e6;
}
.page-body{
    background-color: #fff;
}
.sendmessage {
    display: flex;
    flex-direction:row;
    width:100%;
    padding-top: 2px;
}

.sendmessage input {
    width:80%;
    height:40px;
    line-height : 40px ;
    font-size : 14px ;
    padding-left:0px;
}
.sendmessage button {
    border : 1px solid #ffffff ;
    width : 20% ;
    height : 40px ;
    background : #000000 ;
    color : #ffffff ;
    line-height : 40px ;
    font-size : 14px ;
    margin: 0 auto;
}

